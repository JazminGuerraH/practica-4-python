#ejercicio 1 
from random import randint
from statistics import median
print("ejercicio 1")

lista1 = []
for i in range (10):
    lista1.append(randint(1,10))
print(lista1)
for i in lista1:
    print(i, i**2, i**3)
print()


#ejercicio 2
print("ejercicio 2")
lista2 = []
for i in range (5):
    palabra = input("agregue una palabra: ")
    lista2.append(palabra)
print(lista2)
lista2.reverse()
print(lista2)
print()

#ejercicio 3
print("ejercicio 3")

lista3 = []
for i in range(5):
    nota = float(input("escribe calificacion: "))
    while(nota<0 or nota>10):
        print("pon otra calificacion: ")
        nota = float(input("escribe calificacion: "))
    lista3.append(nota)
print(lista3)
print(f"la media es: {median(lista3)}, la maxima es: {max(lista3)}, la minima es: {min(lista3)} ")
print()


#ejercicio 4 
print("ejercicio 4")

diccionario = {}
alumnos = int(input("cuantos alumnos son: "))
for i in range (1, alumnos + 1):
    nombre = input("ingresa el nombre del alumno: ")
    while nombre in diccionario:
        print("el usuario ya esta en lista")
        nombre = input("ingresa el nombre del alumno: ")
    lista= []
    nota=float(input("ingrese una nota: "))
    while nota >=0:
        lista.append(nota)
        nota = float(input("ingrese una nota: "))
        diccionario [nombre]= lista
for i,j in diccionario.items():
    print(i)
    print(j)
    longitud =len(j)
    promedio=sum(j)/longitud
    print(i,"su promedio es", promedio)
    
print()

#ejercicio 5 
print("ejercicio 5")
meses = ("inicio", "enero", "febrero", "marzo", "abril", "mayo", "junio", "julio", "agosto", "septiembre", "octubre", "noviembre", "diciembre")
salida = False
while not salida:
    numero= int(input("digita un n√∫mero: "))
    if numero == 0:
        break
    else:
        print(meses[numero])

